<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/actions_btns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <Button
            android:id="@+id/btnContactPermission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Request Contact Permission"
            android:layout_marginBottom="30dp"
            />

        <Button
            android:id="@+id/btnCameraPermission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Request Camera Permission"
            android:layout_marginBottom="30dp"
            />

        <Button
            android:id="@+id/btnLocationPermission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Request Location Permission"
            android:layout_marginBottom="30dp"
            />

        <Button
            android:id="@+id/btnCameraContactLocationPermission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Request Camera,Contact and Location all in one Permission"
            android:layout_marginBottom="30dp"
            />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>